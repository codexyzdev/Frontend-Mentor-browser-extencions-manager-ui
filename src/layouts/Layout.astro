---
// Supports weights 100-900
import "@fontsource-variable/noto-sans";
import "../styles/global.css";
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>Browser extencions manager ui</title>
  </head>
  <body
    class='dark:bg-neutral-900 text-neutral-900 lg:h-screen dark:text-neutral-200
		transition-colors duration-300
		ease-in-out pt-4'
  >
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    font-family: "Noto Sans Variable", sans-serif;
    min-height: 100%;
    background-image: linear-gradient(180deg, #ebf2fc 0%, #eef8f9 100%);
    background-size: cover;
    background-repeat: no-repeat;
  }
  html.dark > body {
    background-image: linear-gradient(180deg, #040918 0%, #091540 100%);
  }
</style>
